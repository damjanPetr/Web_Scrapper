// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Action {
  id            Int             @id @default(autoincrement())
  title         String          @unique
  createdAt     DateTime        @default(now())
  parameters    Parameter[]
  scrap_actions scrap_actions[]
}

model Parameter {
  id              Int    @id @default(autoincrement())
  key             String @unique
  value           String
  actionId        Int
  scrap_actionsId Int?

  Action        Action         @relation(fields: [actionId], references: [id])
  scrap_actions scrap_actions? @relation(fields: [scrap_actionsId], references: [id])
}

model Scrap_Instance {
  id        Int      @id @default(autoincrement())
  url       String
  title     String
  createdAt DateTime @default(now())

  scrap_actions scrap_actions[]
}

model scrap_actions {
  id               Int      @id @default(autoincrement())
  createdAt        DateTime @default(now())
  scrap_InstanceId Int
  actionId         Int

  parameters     Parameter[]
  action         Action         @relation(fields: [actionId], references: [id])
  scrap_instance Scrap_Instance @relation(fields: [scrap_InstanceId], references: [id])
}
