// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Parameter {
  id       Int    @id @default(autoincrement())
  value    String
  actionId Int
  position Int

  actions Action? @relation(fields: [actionId], references: [id])
}

model Result {
  id               Int             @id @default(autoincrement())
  Scrap_Instance   Scrap_Instance? @relation(fields: [scrap_InstanceId], references: [id])
  scrap_InstanceId Int?
  body             String
}

model Scrap_Instance {
  id          Int      @id @default(autoincrement())
  url         String
  title       String
  createdAt   DateTime @default(now())
  resultsPath String   @default("")
  actions     Action[]
  results     Result[]
}

model Action {
  id               Int      @id @default(autoincrement())
  createdAt        DateTime @default(now())
  action           String
  scrap_InstanceId Int

  parameters     Parameter[]
  scrap_instance Scrap_Instance @relation(fields: [scrap_InstanceId], references: [id])
}
